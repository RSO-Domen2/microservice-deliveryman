<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="deliveryman-jpa" transaction-type="RESOURCE_LOCAL">
        <non-jta-data-source>jdbc/DeliverymanMetadataDS</non-jta-data-source>

        <class>si.fri.rso.domen2.deliveryman.models.entities.DeliverymanMetadataEntity</class>
        <class>si.fri.rso.domen2.deliveryman.models.converters.InstantAtributeConverter</class>

        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/> <!-- ob zagonu se baza pobriše -->
            <property name="javax.persistence.schema-generation.create-source" value="metadata"/> <!-- jpa datoteke -->
            <property name="javax.persistence.sql-load-script-source"
                      value="sql-scripts/init.sql" /> <!-- ob zagonu ta datoteka zafila bazo nazaj -->
            <property name="javax.persistence.schema-generation.drop-source" value="metadata"/> <!-- pri generiranju izbriše metapodatke -->
        </properties>
    </persistence-unit>
</persistence>
